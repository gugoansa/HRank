{
  "compilerOptions": {
    /* === üß† Compatibilidad y salida === */
    "target": "ES2020",                  // JavaScript moderno
    "module": "ESNext",                  // Usa import/export nativo
    "moduleResolution": "node",          // C√≥mo resolver los imports
    "allowJs": true,                    // Aseg√∫rate de que se puedan usar archivos JS si los tienes

    /* === üìÅ Estructura de carpetas === */
    "rootDir": "src",                    // D√≥nde est√°n tus .ts
    "outDir": "dist",                    // D√≥nde guardar los .js compilados

    /* === ‚úÖ Buenas pr√°cticas === */
    "strict": true,                      // Verificaci√≥n estricta de tipos
    "esModuleInterop": true,             // Permite importar m√≥dulos comunes
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* === üß© Soporte para Node === */
    "types": ["node"],                   // Autocompletado y tipos de Node
    "resolveJsonModule": true            // Permite importar JSON si lo necesitas
  },

  /* === üì¶ Qu√© incluir/excluir === */
  "include": ["src/**/*", "tests/ui/table.spec.ts"],                      // Incluye todo lo que est√° en la carpeta src
  "exclude": ["node_modules", "dist", "tests", "src/test/**/*"]  // Excluye node_modules y dist
}
